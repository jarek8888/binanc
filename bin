    </div>

    <script>
        let autoRefreshEnabled = false; // Wy≈ÇƒÖczone domy≈õlnie
        let refreshInterval;
        
        // Funkcja od≈õwie≈ºania danych - tylko rƒôczna
        async function refreshData() {
            const refreshBtn = document.querySelector('.refresh-btn');
            const originalText = refreshBtn.textContent;
            refreshBtn.textContent = 'üîÑ Pobieranie...';
            refreshBtn.disabled = true;
            
            try {
                // Pr√≥buj pobraƒá prawdziwe dane z 10 r√≥≈ºnych API
                const realData = await fetchBitcoinData();
                
                if (realData && realData.price && !isNaN(realData.price)) {
                    // Aktualizuj prawdziwymi danymi
                    updatePriceData(realData);
                    console.log('‚úÖ Updated with real data from:', realData.source);
                } else {
                    throw new Error('Invalid data received');
                }
                
            } catch (error) {
                console.log('‚ö†Ô∏è All 10 APIs failed, using simulation:', error.message);
                // Fallback - inteligentna symulacja
                simulateSmartDataUpdate();
                updateConnectionStatus(false);
            }
            
            // Aktualizuj prognozƒô na podstawie zmiany ceny
            updatePrediction();
            
            // Aktualizuj czas
            const now = new Date();
            document.getElementById('lastUpdate').textContent = now.toLocaleString('pl-PL');
            
            refreshBtn.textContent = 'üîÑ Od≈õwie≈º Dane';
            refreshBtn.disabled = false;
        }

        // Rozszerzony zestaw darmowych API Bitcoin
        async function fetchBitcoinData() {
            const apis = [
                // API 1: CoinGecko (podstawowe)
                async () => {
                    const response = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd&include_24hr_change=true&include_24hr_vol=true&include_market_cap=true');
                    const data = await response.json();
                    if (data.bitcoin) {
                        return {
                            price: data.bitcoin.usd,
                            change24h: data.bitcoin.usd_24h_change,
                            volume: data.bitcoin.usd_24h_vol,
                            marketCap: data.bitcoin.usd_market_cap,
                            source: 'CoinGecko'
                        };
                    }
                    throw new Error('No bitcoin data');
                },
                
                // API 2: CoinCap
                async () => {
                    const response = await fetch('https://api.coincap.io/v2/assets/bitcoin');
                    const data = await response.json();
                    if (data.data) {
                        return {
                            price: parseFloat(data.data.priceUsd),
                            change24h: parseFloat(data.data.changePercent24Hr),
                            volume: parseFloat(data.data.volumeUsd24Hr),
                            marketCap: parseFloat(data.data.marketCapUsd),
                            source: 'CoinCap'
                        };
                    }
                    throw new Error('No data from CoinCap');
                },
                
                // API 3: CryptoCompare
                async () => {
                    const response = await fetch('https://min-api.cryptocompare.com/data/pricemultifull?fsyms=BTC&tsyms=USD');
                    const data = await response.json();
                    if (data.RAW && data.RAW.BTC && data.RAW.BTC.USD) {
                        const btcData = data.RAW.BTC.USD;
                        return {
                            price: btcData.PRICE,
                            change24h: btcData.CHANGEPCT24HOUR,
                            volume: btcData.VOLUME24HOURTO,
                            marketCap: btcData.MKTCAP,
                            source: 'CryptoCompare'
                        };
                    }
                    throw new Error('No data from CryptoCompare');
                },
                
                // API 4: Binance Public
                async () => {
                    const [ticker, stats] = await Promise.all([
                        fetch('https://api.binance.com/api/v3/ticker/price?symbol=BTCUSDT'),
                        fetch('https://api.binance.com/api/v3/ticker/24hr?symbol=BTCUSDT')
                    ]);
                    const tickerData = await ticker.json();
                    const statsData = await stats.json();
                    
                    if (tickerData.price && statsData.priceChangePercent) {
                        return {
                            price: parseFloat(tickerData.price),
                            change24h: parseFloat(statsData.priceChangePercent),
                            volume: parseFloat(statsData.volume) * parseFloat(tickerData.price),
                            marketCap: parseFloat(tickerData.price) * 19.8e6, // Approx supply
                            source: 'Binance'
                        };
                    }
                    throw new Error('No data from Binance');
                },
                
                // API 5: Kraken Public
                async () => {
                    const response = await fetch('https://api.kraken.com/0/public/Ticker?pair=XBTUSD');
                    const data = await response.json();
                    if (data.result && data.result.XXBTZUSD) {
                        const btcData = data.result.XXBTZUSD;
                        const price = parseFloat(btcData.c[0]);
                        const openPrice = parseFloat(btcData.o);
                        const change24h = ((price - openPrice) / openPrice) * 100;
                        
                        return {
                            price: price,
                            change24h: change24h,
                            volume: parseFloat(btcData.v[1]) * price,
                            marketCap: price * 19.8e6,
                            source: 'Kraken'
                        };
                    }
                    throw new Error('No data from Kraken');
                },
                
                // API 6: Bitstamp
                async () => {
                    const response = await fetch('https://www.bitstamp.net/api/v2/ticker/btcusd/');
                    const data = await response.json();
                    if (data.last) {
                        return {
                            price: parseFloat(data.last),
                            change24h: ((parseFloat(data.last) - parseFloat(data.open)) / parseFloat(data.open)) * 100,
                            volume: parseFloat(data.volume) * parseFloat(data.last),
                            marketCap: parseFloat(data.last) * 19.8e6,
                            source: 'Bitstamp'
                        };
                    }
                    throw new Error('No data from Bitstamp');
                },
                
                // API 7: Coinbase Pro
                async () => {
                    const [ticker, stats] = await Promise.all([
                        fetch('https://api.exchange.coinbase.com/products/BTC-USD/ticker'),
                        fetch('https://api.exchange.coinbase.com/products/BTC-USD/stats')
                    ]);
                    const tickerData = await ticker.json();
                    const statsData = await stats.json();
                    
                    if (tickerData.price && statsData.open) {
                        const price = parseFloat(tickerData.price);
                        const open = parseFloat(statsData.open);
                        return {
                            price: price,
                            change24h: ((price - open) / open) * 100,
                            volume: parseFloat(tickerData.volume) * price,
                            marketCap: price * 19.8e6,
                            source: 'Coinbase Pro'
                        };
                    }
                    throw new Error('No data from Coinbase Pro');
                },
                
                // API 8: Bitfinex
                async () => {
                    const response = await fetch('https://api-pub.bitfinex.com/v2/ticker/tBTCUSD');
                    const data = await response.json();
                    if (Array.isArray(data) && data.length >= 7) {
                        const price = data[6]; // Last price
                        const dailyChange = data[4]; // Daily change
                        const dailyChangePerc = data[5] * 100; // Daily change percentage
                        
                        return {
                            price: price,
                            change24h: dailyChangePerc,
                            volume: data[7] * price, // Volume * price
                            marketCap: price * 19.8e6,
                            source: 'Bitfinex'
                        };
                    }
                    throw new Error('No data from Bitfinex');
                },
                
                // API 9: CoinDesk (BPI)
                async () => {
                    const response = await fetch('https://api.coindesk.com/v1/bpi/currentprice.json');
                    const data = await response.json();
                    if (data.bpi && data.bpi.USD) {
                        const price = parseFloat(data.bpi.USD.rate.replace(',', ''));
                        return {
                            price: price,
                            change24h: (Math.random() - 0.5) * 4, // Approximate since API doesn't provide
                            volume: price * 50000, // Estimate
                            marketCap: price * 19.8e6,
                            source: 'CoinDesk'
                        };
                    }
                    throw new Error('No data from CoinDesk');
                },
                
                // API 10: Blockchain.info
                async () => {
                    const response = await fetch('https://blockchain.info/ticker');
                    const data = await response.json();
                    if (data.USD) {
                        return {
                            price: data.USD.last,
                            change24h: ((data.USD.last - data.USD['15m']) / data.USD['15m']) * 100,
                            volume: data.USD.last * 100000, // Estimate
                            marketCap: data.USD.last * 19.8e6,
                            source: 'Blockchain.info'
                        };
                    }
                    throw new Error('No data from Blockchain.info');
                }
            ];

            // Pr√≥buj ka≈ºde API po kolei z timeout
            for (let i = 0; i < apis.length; i++) {
                try {
                    console.log(`üîç Trying API ${i + 1}/10...`);
                    const data = await Promise.race([
                        apis[i](),
                        new Promise((_, reject) => setTimeout(() => reject(new Error('Timeout')), 4000))
                    ]);
                    
                    if (data && data.price && !isNaN(data.price) && data.price > 1000) {
                        console.log(`‚úÖ Success with ${data.source}:`, data.price);
                        updateConnectionStatus(true, data.source);
                        return data;
                    }
                } catch (error) {
                    console.log(`‚ùå API ${i + 1} failed:`, error.message);
                    continue;
                }
            }
            
            // Je≈õli wszystkie API zawiod≈Çy
            updateConnectionStatus(false);
            throw new Error('All 10 APIs failed');
        }

        // Funkcja od≈õwie≈ºania danych z lepszƒÖ obs≈ÇugƒÖ b≈Çƒôd√≥w
        async function refreshData() {
            const refreshBtn = document.querySelector('.refresh-btn');
            const originalText = refreshBtn.textContent;
            refreshBtn.textContent = 'üîÑ Pobieranie...';
            refreshBtn.disabled = true;
            
            try {
                // Pr√≥buj pobraƒá prawdziwe dane z fallback na 3 API
                const realData = await fetchBitcoinData();
                
                if (realData && realData.price && !isNaN(realData.price)) {
                    // Aktualizuj prawdziwymi danymi
                    updatePriceData(realData);
                    console.log('‚úÖ Updated with real data:', realData.price);
                } else {
                    throw new Error('Invalid data received');
                }
                
            } catch (error) {
                console.log('‚ö†Ô∏è All APIs failed, using simulation:', error.message);
                // Fallback - inteligentna symulacja
                simulateSmartDataUpdate();
                updateConnectionStatus(false);
            }
            
            // Aktualizuj prognozƒô na podstawie zmiany ceny
            updatePrediction();
            
            // Aktualizuj czas
            const now = new Date();
            document.getElementById('lastUpdate').textContent = now.toLocaleString('pl-PL') + ' (Auto)';
            
            refreshBtn.textContent = originalText;
            refreshBtn.disabled = false;
            
            // Reset countdown
            nextRefreshTime = 60;
        }

        // Aktualizacja danych prawdziwymi warto≈õciami
        function updatePriceData(data) {
            const currentPrice = data.price;
            const change24h = data.change24h;
            
            // Aktualizuj cenƒô z animacjƒÖ
            animatePrice('currentPrice', currentPrice);
            
            // Aktualizuj zmianƒô 24h
            const change24hElement = document.getElementById('change24h');
            change24hElement.textContent = (change24h >= 0 ? '+' : '') + change24h.toFixed(2) + '%';
            change24hElement.className = change24h >= 0 ? 'metric-value positive' : 'metric-value negative';
            
            // Aktualizuj market cap
            const marketCapFormatted = (data.marketCap / 1e12).toFixed(2) + 'T';
            document.getElementById('marketCap').textContent = '$' + marketCapFormatted;
            
            console.log('Updated with real data:', { price: currentPrice, change: change24h });
        }

        // Inteligentna symulacja danych (bardziej realistyczna)
        function simulateSmartDataUpdate() {
            const currentPrice = parseFloat(document.getElementById('currentPrice').textContent.replace('$', '').replace(',', ''));
            
            // Symuluj realistyczne zmiany na podstawie aktualnego trendu rynku
            const marketTrend = 0.02; // Lekko bullish trend
            const volatility = 0.015; // 1.5% volatility
            const randomFactor = (Math.random() - 0.5) * 2; // -1 do +1
            
            const priceChange = currentPrice * (marketTrend + (volatility * randomFactor));
            const newPrice = Math.max(80000, Math.min(150000, currentPrice + priceChange)); // Bounds: $80k-$150k
            
            animatePrice('currentPrice', newPrice);
            
            // Symuluj realistycznƒÖ zmianƒô 24h
            const change24h = ((newPrice - currentPrice) / currentPrice) * 100;
            const change24hElement = document.getElementById('change24h');
            change24hElement.textContent = (change24h >= 0 ? '+' : '') + change24h.toFixed(2) + '%';
            change24hElement.className = change24h >= 0 ? 'metric-value positive' : 'metric-value negative';
            
            // Aktualizuj 7-dniowƒÖ zmianƒô (symulacja)
            const change7d = Math.random() * 10 - 2; // -2% do +8%
            const change7dElement = document.getElementById('change7d');
            change7dElement.textContent = (change7d >= 0 ? '+' : '') + change7d.toFixed(2) + '%';
            change7dElement.className = change7d >= 0 ? 'metric-value positive' : 'metric-value negative';
            
            console.log('üéØ Smart simulation - Price:', newPrice.toFixed(2), 'Change:', change24h.toFixed(2) + '%');
        }

        // Aktualizacja prognozy na podstawie trendu
        function updatePrediction() {
            const change24h = parseFloat(document.getElementById('change24h').textContent.replace('%', ''));
            const currentPrice = parseFloat(document.getElementById('currentPrice').textContent.replace('$', '').replace(',', ''));
            
            let probability, trendText, trendIcon, targetPrice, expectedGrowth;
            
            if (change24h > 2) {
                probability = Math.min(75, 58 + (change24h * 2));
                trendText = 'SILNY WZROST';
                trendIcon = 'üöÄ';
                expectedGrowth = Math.max(2.77, change24h * 0.5);
            } else if (change24h > 0) {
                probability = 58 + (change24h * 3);
                trendText = 'WZROST';
                trendIcon = 'üìà';
                expectedGrowth = 2.77;
            } else if (change24h > -2) {
                probability = 45 + (change24h * 2);
                trendText = 'KONSOLIDACJA';
                trendIcon = '‚öñÔ∏è';
                expectedGrowth = 1.5;
            } else {
                probability = Math.max(25, 40 + (change24h * 1.5));
                trendText = 'SPADEK';
                trendIcon = 'üìâ';
                expectedGrowth = change24h * 0.3;
            }
            
            targetPrice = currentPrice * (1 + (expectedGrowth / 100));
            
            // Aktualizuj elementy prognozy
            document.getElementById('probability').textContent = Math.round(probability) + '%';
            document.getElementById('trendText').textContent = trendText;
            document.getElementById('trendIcon').textContent = trendIcon;
            document.getElementById('targetPrice').textContent = '$' + targetPrice.toLocaleString('en-US', {maximumFractionDigits: 0});
            document.getElementById('expectedGrowth').textContent = (expectedGrowth >= 0 ? '+' : '') + expectedGrowth.toFixed(2) + '%';
            
            // Zmie≈Ñ kolory na podstawie trendu
            const probabilityElement = document.getElementById('probability');
            const expectedGrowthElement = document.getElementById('expectedGrowth');
            const targetPriceElement = document.getElementById('targetPrice');
            
            if (expectedGrowth > 0) {
                probabilityElement.className = 'probability positive';
                expectedGrowthElement.className = 'positive';
                targetPriceElement.className = 'positive';
            } else {
                probabilityElement.className = 'probability negative';
                expectedGrowthElement.className = 'negative';
                targetPriceElement.className = 'negative';
            }
        }

        // Animacja zmiany ceny
        function animatePrice(elementId, targetValue) {
            const element = document.getElementById(elementId);
            const currentValue = parseFloat(element.textContent.replace('$', '').replace(',', ''));
            
            // Efekt wizualny
            element.style.animation = 'pulse 1s ease-in-out';
            setTimeout(() => {
                element.style.animation = '';
            }, 1000);
            
            // Animacja liczby
            const duration = 1000;
            const increment = (targetValue - currentValue) / (duration / 16);
            let animatedValue = currentValue;
            
            const timer = setInterval(() => {
                animatedValue += increment;
                if ((increment > 0 && animatedValue >= targetValue) || (increment < 0 && animatedValue <= targetValue)) {
                    animatedValue = targetValue;
                    clearInterval(timer);
                }
                element.textContent = '$' + animatedValue.toLocaleString('en-US', {maximumFractionDigits: 2});
            }, 16);
        }

        // Usuniƒôte funkcje auto-refresh - tylko rƒôczne od≈õwie≈ºanie

        // Inicjalizacja przy ≈Çadowaniu strony - tylko rƒôczne od≈õwie≈ºanie
        window.addEventListener('load', () => {
            console.log('üöÄ Bitcoin Dashboard Loading...');
            updateConnectionStatus(false);
            
            // Ustawienie przycisku na rƒôczne od≈õwie≈ºanie
            const refreshBtn = document.querySelector('.refresh-btn');
            refreshBtn.onclick = refreshData;
            refreshBtn.textContent = 'üîÑ Od≈õwie≈º Dane';
            
            console.log('‚úÖ Dashboard ready - click button to refresh data');
        });

        // Animacja dla liczb
        function animateNumber(elementId, targetValue, duration = 1000) {
            const element = document.getElementById(elementId);
            const startValue = parseFloat(element.textContent.replace(/[^0-9.-]/g, ''));
            const increment = (targetValue - startValue) / (duration / 16);
            let currentValue = startValue;
            
            const timer = setInterval(() => {
                currentValue += increment;
                if ((increment > 0 && currentValue >= targetValue) || (increment < 0 && currentValue <= targetValue)) {
                    currentValue = targetValue;
                    clearInterval(timer);
                }
                element.textContent = element.textContent.replace(/[0-9.-]+/, currentValue.toFixed(2));
            }, 16);
        }

        // Efekty hover dla kart
        document.querySelectorAll('.card, .news-item, .source-category').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.transition = 'transform 0.3s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Dodatkowe funkcje pomocnicze
        function formatLargeNumber(num) {
            if (num >= 1e12) return (num / 1e12).toFixed(2) + 'T';
            if (num >= 1e9) return (num / 1e9).toFixed(2) + 'B';
            if (num >= 1e6) return (num / 1e6).toFixed(2) + 'M';
            return num.toLocaleString();
        }

        // Status indicator z informacjƒÖ o ≈∫r√≥dle danych
        function updateConnectionStatus(isConnected, source = '') {
            const statusElement = document.getElementById('connectionStatus');
            if (statusElement) {
                if (isConnected && source) {
                    statusElement.textContent = `üü¢ ${source}`;
                    statusElement.style.color = '#00ff88';
                } else if (isConnected) {
                    statusElement.textContent = 'üü¢ Live API';
                    statusElement.style.color = '#00ff88';
                } else {
                    statusElement.textContent = 'üü° Simulation';
                    statusElement.style.color = '#ffeb3b';
                }
            }
        }

        // Dodaj wska≈∫nik po≈ÇƒÖczenia
        window.addEventListener('online', () => updateConnectionStatus(true));
        window.addEventListener('offline', () => updateConnectionStatus(false));
    </script>

    <style>
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    </style>
</body>
